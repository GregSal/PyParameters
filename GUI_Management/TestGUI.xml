<GuiDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="file:./GUI_Builder.xsd">
  <VariableSet>
    <Variable name="Output">
      <variable_class>tk.StringVar</variable_class>
      <data_reference>test_string</data_reference>
    </Variable>
  </VariableSet>
  <CommandSet>
    <Command name="Exit"
             function="W::root.destroy">
      <PositionalArgs />
      <KeywordArgs />
    </Command>
    <Command name="ShowText"
             function="fg.message_window">
      <PositionalArgs>
        <Arg>W::root</Arg>
      </PositionalArgs>
      <KeywordArgs window_text="Message" variable="V::Output"/>
    </Command>
  </CommandSet>
  <RootWindow name="root">
    <Settings>
      <Title>Main GUI</Title>
      <Geometry>
        <Height>768</Height>
        <Width>1024</Width>
      </Geometry>
      <Appearance bg='light blue'/>
      <GridConfigure>
        <ColumnConfigure column='0' weight='1'/>
        <RowConfigure row='0' weight='1'/>
      </GridConfigure>
      <State>normal</State>
    </Settings>
    <WidgetSet>
      <FunctionalWidget name="exit_button">
        <widget_class>ttk.Button</widget_class>
        <WidgetConfiguration text="Egress"
                   command="C::Exit"/>
        <WidgetGeometry>
          <Placement>
            <GridPlacement column="0" row="3"/>
          </Placement>
        </WidgetGeometry>
      </FunctionalWidget>
      <FunctionalWidget name="test_entry">
        <widget_class>ttk.Entry</widget_class>
        <WidgetConfiguration textvariable="V::Output"/>
        <WidgetGeometry>
          <Placement>
            <GridPlacement column="0" row="0"/>
          </Placement>
        </WidgetGeometry>
      </FunctionalWidget>
      <FunctionalWidget name="text_button">
        <widget_class>ttk.Button</widget_class>
        <WidgetConfiguration text="Display"
                   command="C::ShowText"/>
        <WidgetGeometry>
          <Placement>
            <GridPlacement column="1" row="0" rowspan="2"/>
          </Placement>
        </WidgetGeometry>
      </FunctionalWidget>
      <FunctionalWidget name="test_label">
        <widget_class>ttk.Label</widget_class>
        <WidgetConfiguration textvariable="V::Output"/>
        <WidgetGeometry>
          <Placement>
            <GridPlacement column="0" row="1"/>
          </Placement>
        </WidgetGeometry>
      </FunctionalWidget>
    </WidgetSet>
    <Window>
      <Settings>

      </Settings>
    </Window>
  </RootWindow>
</GuiDefinition>